            <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0" />
        </inertial>
    </link>

    <joint name="ink_1_joint" type="revolute">
        <parent link="base_link" />
        <child link="link_1" />
        <axis xyz="0 0 1" />
        <limit lower="-1.57" upper="1.57" velocity="1" 
            effort="1000" />
        <origin xyz="0.0 0.0 0.2" rpy="0 0 0" />
    </joint>

