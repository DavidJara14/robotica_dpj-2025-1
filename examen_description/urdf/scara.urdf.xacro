<?xml version="1.0" ?>
<robot name="robot_scara" xmlns:xacro="http://ros.org/wiki/xacro">

<!--<robot name="robot_scara">-->

    <link name="base_link">
        <visual>
            <origin xyz="0.0 0.0 0.10" rpy="0.0 0.0 0.0" />
            <geometry>
                <box size="0.15 0.10 0.20" />
            </geometry>
            <material name="gray">
                <color rgba="0.1 0.1 0.1 1.0" />
            </material>
        </visual>

        <collision>
            <origin xyz="0.0 0.0 0.10" rpy="0.0 0.0 0.0" />
            <geometry>
                <box size="0.15 0.10 0.20" />
            </geometry>
        </collision>

        <inertial>
            <mass value="1.0" />
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
            <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0" />
        </inertial>
    </link>

    <link name="link_1">
        <visual>
            <origin xyz="0.25 0.0 0.025" rpy="0.0 0.0 0.0" />
            <geometry>
                <box size="0.5 0.05 0.05" />
            </geometry>
            <material name="red">
                <color rgba="1.0 0.0 0.0 1.0" />
            </material>
        </visual>

        <collision>
            <origin xyz="0.25 0.0 0.025" rpy="0.0 0.0 0.0" />
            <geometry>
                <box size="0.5 0.05 0.05" />
            </geometry>
        </collision>

        <inertial>
